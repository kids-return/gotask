{
    "name": "hyperf/gotask",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "A replacement for Swoole TaskWorker in Go",
    "autoload": {
        "psr-4": {
            "Hyperf\\GoTask\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.3",
        "ext-swoole": ">=4.5",
        "hyperf/pool": "~2.1.0",
        "hyperf/process": "~2.1.0",
        "spiral/goridge": "^2.4.1",
        "symfony/event-dispatcher": "^5.1"
    },
    "require-dev": {
        "ext-mongodb": "*",
        "friendsofphp/php-cs-fixer": "^2.14",
        "hyperf/command": "~2.1.0",
        "hyperf/config": "~2.1.0",
        "hyperf/di": "~2.1.0",
        "hyperf/framework": "~2.1.0",
        "hyperf/testing": "~2.1.0",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "^4.5"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "go build -o app example/*.go && go build -o mongo example/mongo_client/*.go && phpunit -c phpunit.xml --colors=always",
        "start-test-server": "php tests/TestServer.php",
        "test-go": "/bin/bash -c 'php tests/TestServer.php & sleep 5 && go test ./...'",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1",
        "binary": "go build -o mongo example/mongo_client/*.go"
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\GoTask\\ConfigProvider"
        }
    }
}
